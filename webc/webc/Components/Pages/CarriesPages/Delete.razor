    }

    .btn-cancel {
        background: #6c757d;
        color: white;
        text-align: center;
    }

    .btn-cancel:hover {
        background: #5a6268;
        transform: translateY(-3px);
        box-shadow: 0 8px 15px rgba(108, 117, 125, 0.3);
    }

    .back-link {
        display: block;
        margin-top: 20px;
        text-align: center;
        font-size: 1rem;
        color: #3498db;
        text-decoration: none;
    }

    .back-link:hover {
        text-decoration: underline;
    }

    .keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
